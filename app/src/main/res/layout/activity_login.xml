<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:paddingRight="60dp"
    android:paddingLeft="60dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    tools:context="haninkyu.yoo_dong.presenter.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="38dp"
            android:text="로그인"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="6">
        <haninkyu.yoo_dong.view.button.LoginButton
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loginBtn"
            android:text="전화번호로 로그인"/>
        <haninkyu.yoo_dong.view.button.LoginButton
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loginBtn"
            android:text="이메일로 로그인"/>
        <haninkyu.yoo_dong.view.button.LoginButton
            android:id="@+id/kakaotalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loginBtn"
            android:text="카카오톡으로 로그인" />
        <haninkyu.yoo_dong.view.button.LoginButton
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loginBtn"
            android:text="페이스북으로 로그인"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/signIn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="loginBtn"
            android:text="회원가입"/>
        <TextView
            android:id="@+id/find"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="loginBtn"
            android:text="E-Mail/PW 찾기"/>
    </LinearLayout>

</LinearLayout>
